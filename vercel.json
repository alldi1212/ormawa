{
  "version": 2,
  "builds": [
    {
      "src": "*.php",
      "use": "vercel-php@0.6.0"
    },
    {
      "src": "img/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/img/(.*)",
      "dest": "/img/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
